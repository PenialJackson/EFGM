{
	"$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
	"runtime.version": "Lua 5.1",
	"format.enable": false,
	"workspace.maxPreload": 5000,
	"workspace.preloadFileSize": 2000,
	"workspace.checkThirdParty": false,
	"diagnostics.disable": ["undefined-global"],
	"runtime.special": { "include": "require", "IncludeCS": "require" },
	"runtime.nonstandardSymbol": ["continue", "&&", "||", "!=", "!", "//"],
	"workspace.library": ["https://github.com/luttje/glua-api-snippets/releases, download and extract .json zip and set this to the absolute path."]
}